<mvc:View
    controllerName="logaligroup.employees.controller.EmployeeDetails"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
<Page id="_IDGenPage1" title="Details">

<Panel id="_IDGenPanel1" >
<FlexBox height="65px" alignItems="Center" justifyContent="Center">
<items>
<Text id="_IDGenText1" text="{jsonEmployees>LastName}, {jsonEmployees>FirstName}" class="boldText"></Text>
</items>
</FlexBox>

<FlexBox height="65px" alignItems="Start" justifyContent="SpaceBetween">
<items>
<VBox >
<Text id="_IDGenText2" text="Employee Id" class="boldText sapUiTinyMarginEnd"></Text>
<Text id="_IDGenText3" text="{jsonEmployees>EmployeeID}" class="sapUiTinyMarginEnd"></Text>
</VBox>
<VBox >
<Text id="_IDGenText4" text="TitleEmployee " class="boldText sapUiTinyMarginEnd"></Text>
<Text id="_IDGenText5" text="{jsonEmployees>Title}" class="sapUiTinyMarginEnd"></Text>
</VBox>
</items>
</FlexBox>


<FlexBox   alignItems="Start"  >
<items>
<HBox >
<Text id="_IDGenText6" text="Country code" class="boldText sapUiTinyMarginEnd"></Text>
<Text id="_IDGenText7" text="{jsonEmployees>Country}" class="sapUiTinyMarginEnd"></Text>
<layoutData>
<FlexItemData growFactor="3" ></FlexItemData>
</layoutData>
</HBox>
<HBox >
<Text id="_IDGenText8" text="City" class="boldText sapUiTinyMarginEnd"></Text>
<Text id="_IDGenText9" text="{jsonEmployees>City}" class="sapUiTinyMarginEnd"></Text>
<layoutData>
<FlexItemData growFactor="2" ></FlexItemData>
</layoutData>
</HBox>

<FlexBox alignItems="Start" >
<Text id="_IDGenText10" text="Postal code" class="boldText sapUiTinyMarginEnd"></Text>
<Text id="_IDGenText11" text="{jsonEmployees>PostalCode}" class="sapUiTinyMarginEnd"></Text>
<layoutData>
<FlexItemData growFactor="1" ></FlexItemData>
</layoutData>
</FlexBox>


</items>
</FlexBox>



</Panel>
</Page>
</mvc:View>