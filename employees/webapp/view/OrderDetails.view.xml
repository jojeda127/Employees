<mvc:View
    controllerName="logaligroup.employees.controller.OrderDetails"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    >
 <Page>
    <customHeader>
        <Bar>
            <contentLeft><Button icon="sap-icon://nav-back" press="onBack"></Button></contentLeft>
            <contentMiddle> <Text text="Order Details {odataNorthwind>OrderID}" />
            </contentMiddle>
        </Bar>
    </customHeader>
    <content>
    <Panel headerText="Customer ID {odataNorthwind>CustomerID}" >
    <l:Grid defaultSpan="XL3 L3 M6 S12" >
        <f:form editable="false">
            <f:layout>
                <f:ResponsiveGridLayout labelSpamL="6" labelSpamM="6" labelSpamS="12"/>
            </f:layout>
            <f:formContainers>
                <f:FormContainer>
                    <f:formElements>
                        <f:FormElement label="Order ID">
                            <f:fields>
                                <Text text="{'path:odataNorthwind>OrderDate',type:'sap.ui.model.odata.type.Date'}"></Text>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="Ship name">
                            <f:fields>
                                <Text text="{odataNorthwind>ShipName'}"></Text>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="Freight">
                            <f:fields>
                                <Text text="{odataNorthwind>Freight'}"></Text>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="Ship Adr">
                            <f:fields>
                                <Text text="{odataNorthwind>ShipAddress'}"></Text>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="Ship City">
                            <f:fields>
                                <Text text="{odataNorthwind>ShipCity'}"></Text>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="Ship City">
                            <f:fields>
                                <Text text="{odataNorthwind>ShipCity'}"></Text>
                            </f:fields>
                        </f:FormElement>
                    </f:formElements>
                </f:FormContainer>
            </f:formContainers>
        </f:form>
    </l:Grid>
    
    </Panel>
    </content>

 
 </Page>
</mvc:View>