<mvc:View
    controllerName="logaligroup.employees.controller.MainView"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Shell id="shell">
        <App id="app">
            <pages>
                <Page id="page" title="{i18n>title}">
                    <content>
                    <HBox id="_IDGenHBox1">
                    <Label text="{i18n>employee}"></Label>
                    <Input id="inputEmployee" value="" maxLength="6" liveChange="onValidateId"/>
                    <Label id="labelOK" text=" "></Label>
                    
                    <Label id="" text="country"></Label>
                    <Select
						enabled="{/Enabled}"
						editable="{/Editable}"
						forceSelection="false">
                       <core:ListItem text="{i18n>unitedState}" key="US"/>
                       <core:ListItem text="{i18n>unitedKingdom}" key="UK"/>
                       <core:ListItem text="{i18n>spain}" key="ES"/>
									</Select>
                    </HBox>
                    </content>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>
