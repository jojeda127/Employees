<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m">
<Panel>
<headerToolbar>
<Toolbar >
<core:Icon src="{= ${incidenceModel>status} === '0' ? 'accept' :
                   ${incidenceModel>status} === '1' ? 'alert' :
                   ${incidenceModel>status} === '2' ? 'decline' : '' }"></core:Icon>
    <Title text="Incidence {incidenceModel>index } {path: 'incidenceModel>date',formatter:'.Formatter.dateFormat'}"></Title>               
    <ToolbarSpacer></ToolbarSpacer>
    <core:Icon id="_IDGenIcon1" src="delete" press="onDelete"/>
</Toolbar>
</headerToolbar>
    <content>
        <HBox>
            <VBox class="sapUiSmallMarginEnd">
                <Text text="Incidende date"/>
                <DatePicker dateValue="{incidenceModel>date}"/>
            </VBox>
            <VBox visible="{= ${incidenceModel>date} !== '' &amp;&amp; ${incidenceModel>date} !== undefined}" class="sapUiSmallMarginEnd">
                <Text text="Reason"/>
                <Input/>
            </VBox>
            <VBox visible="{= ${incidenceModel>date} !== '' &amp;&amp; ${incidenceModel>date} !== undefined}">
                <Text text="Incidence type"/>
                <Select selectedKey="{incidenceModel>status}" forceSelection="false">
                <core:Item key="0" text="Correct" ></core:Item>
                <core:Item key="1" text="Pending" ></core:Item>
                <core:Item key="2" text="Error" ></core:Item>
                </Select>
            </VBox>
        </HBox>
    </content>
</Panel>
</core:FragmentDefinition>